
# ===== BACKEND CONFIGURATION =====
PORT=5000
NODE_ENV=development

# MongoDB Connection
MONGO_URI=mongodb://localhost:27017/easylaunch

# JWT Secret
JWT_SECRET=your_jwt_secret

# Blockchain Private Keys
PRIVATE_KEY=YOUR_SEPOLIA_DEPLOYER_PRIVATE_KEY
BSC_PRIVATE_KEY=YOUR_BSC_DEPLOYER_PRIVATE_KEY
POLYGON_PRIVATE_KEY=YOUR_POLYGON_DEPLOYER_PRIVATE_KEY

# RPC URLs
SEPOLIA_RPC_URL=https://sepolia.infura.io/v3/YOUR_INFURA_KEY
BSC_TESTNET_RPC_URL=https://data-seed-prebsc-1-s1.binance.org:8545
POLYGON_MUMBAI_RPC_URL=https://rpc-mumbai.maticvigil.com/

# Email Configuration
EMAIL_USER=your_email@example.com
EMAIL_PASS=your_email_password

# Google reCAPTCHA
RECAPTCHA_SECRET=your_recaptcha_secret

# OpenAI API
OPENAI_API_KEY=your_openai_api_key

# Discord Webhook
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/your_webhook_url

# Security Settings
ALLOWED_ORIGINS=http://localhost:3000,https://your-production-domain.com
RATE_LIMIT=120
TRUST_PROXY=false

# ===== FRONTEND CONFIGURATION (REACT_APP_ prefix) =====
REACT_APP_API_URL=http://localhost:5000
REACT_APP_RECAPTCHA_SITE_KEY=your_recaptcha_site_key

# Platform Wallet (Payments)
REACT_APP_PLATFORM_WALLET=0xYOUR_PLATFORM_WALLET_ADDRESS

# Infura API Key
REACT_APP_INFURA_KEY=your_infura_key

# ELT Token Addresses (Her network i√ßin)
REACT_APP_ELT_SEPOLIA=0xYOUR_ELT_SEPOLIA_ADDRESS
