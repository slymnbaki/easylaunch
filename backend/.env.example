REACT_APP_ELT_BSC=0xYOUR_ELT_BSC_ADDRESS
REACT_APP_ELT_BSC_TESTNET=0xYOUR_ELT_BSC_TESTNET_ADDRESS
REACT_APP_ELT_POLYGON=0xYOUR_ELT_POLYGON_ADDRESS
