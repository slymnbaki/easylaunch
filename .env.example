# Frontend
REACT_APP_API_URL=http://localhost:5000
REACT_APP_RECAPTCHA_SITE_KEY=REPLACE_WITH_SITE_KEY

# Backend
PORT=5000
RECAPTCHA_SECRET=REPLACE_WITH_SECRET
NODE_ENV=development

# MongoDB connection string for production (use Atlas or managed DB)
MONGO_URI=mongodb+srv://<user>:<pass>@cluster0.mongodb.net/easylaunch?retryWrites=true&w=majority

# JWT secret
JWT_SECRET=your_jwt_secret_here

# Blockchain / RPC
PRIVATE_KEY=0xYOUR_PRIVATE_KEY_HERE
SEPOLIA_RPC_URL=https://sepolia.infura.io/v3/YOUR_INFURA_KEY
BSC_TESTNET_RPC_URL=https://data-seed-prebsc-1-s1.binance.org:8545
POLYGON_MUMBAI_RPC_URL=https://rpc-mumbai.maticvigil.com

# Email (use transactional email provider credentials, don't commit real ones)
EMAIL_USER=you@example.com
EMAIL_PASS=securepassword

# Google reCAPTCHA (site key public, secret server-side)
RECAPTCHA_SECRET=your_recaptcha_secret
REACT_APP_RECAPTCHA_SITE_KEY=your_recaptcha_site_key

# App configuration
ALLOWED_ORIGINS=https://your-production-domain.com
RATE_LIMIT=120
TRUST_PROXY=true
PORT=5000
NODE_ENV=production